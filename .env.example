# Application Configuration
DEBUG=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your-bucket-name

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Search Configuration
TOP_K_RESULTS=10
IMAGE_TEXT_FUSION_WEIGHT=0.7

# ONNX Optimization (2-3x faster CPU inference)
# Set to true after running: python scripts/convert_to_onnx.py
USE_ONNX=false
ONNX_VISION_MODEL_PATH=models/onnx/clip_vision.onnx
ONNX_TEXT_MODEL_PATH=models/onnx/clip_text.onnx
